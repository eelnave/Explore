<?xml version="1.0" encoding="utf-8"?>
<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:compat="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:fillViewport="true">

	<android.support.v7.widget.GridLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		compat:columnCount="5">

		<TextView
			style="@style/TextLabel"
			android:text="@string/majorRadius"
			compat:layout_columnSpan="2"/>

		<Space android:layout_width="30dp"/>

		<TextView
			style="@style/TextLabel"
			android:text="@string/minorRadius"
			compat:layout_columnSpan="2"/>

		<TextView
			style="@style/TextLabel"
			android:labelFor="@+id/decMajor"
			android:text="@string/torMajor"/>

		<EditText
			android:id="@+id/decMajor"
			style="@style/UnsignedDecimal"
			android:ems="5">

			<requestFocus/>
		</EditText>

		<Space android:layout_width="30dp"/>

		<TextView
			style="@style/TextLabel"
			android:labelFor="@+id/decMinor"
			android:text="@string/torMinor"/>

		<EditText
			android:id="@+id/decMinor"
			style="@style/UnsignedDecimal"
			android:ems="5"/>

		<TextView
			style="@style/TextLabel"
			android:layout_marginTop="15dp"
			android:text="@string/innerRadius"
			compat:layout_columnSpan="2"/>

		<Space android:layout_width="30dp"/>

		<TextView
			style="@style/TextLabel"
			android:layout_marginTop="15dp"
			android:text="@string/outerRadius"
			compat:layout_columnSpan="2"/>

		<TextView
			style="@style/TextLabel"
			android:text="@string/torInnerFormula"
			compat:layout_columnSpan="2"/>

		<Space android:layout_width="30dp"/>

		<TextView
			style="@style/TextLabel"
			android:text="@string/torOuterFormula"
			compat:layout_columnSpan="2"/>

		<TextView
			style="@style/TextLabel"
			android:labelFor="@+id/decInner"
			android:text="@string/torInner"/>

		<EditText
			android:id="@+id/decInner"
			style="@style/UnsignedDecimal"
			android:ems="5"/>

		<Space android:layout_width="30dp"/>

		<TextView
			style="@style/TextLabel"
			android:labelFor="@+id/decOuter"
			android:text="@string/torOuter"/>

		<EditText
			android:id="@+id/decOuter"
			style="@style/UnsignedDecimal"
			android:ems="5"/>

		<TextView
			style="@style/TextLabel"
			android:layout_marginTop="15dp"
			android:text="@string/SurfaceArea"
			compat:layout_columnSpan="5"/>

		<TextView
			style="@style/TextLabel"
			android:text="@string/torSurfAreaFormula"
			compat:layout_columnSpan="5"/>

		<TextView
			style="@style/TextLabel"
			android:labelFor="@+id/decSurfArea"
			android:text="@string/torSurf"/>

		<EditText
			android:id="@+id/decSurfArea"
			style="@style/UnsignedDecimal"
			android:ems="7"
			compat:layout_columnSpan="4"/>

		<TextView
			style="@style/TextLabel"
			android:layout_marginTop="15dp"
			android:text="@string/Volume"
			compat:layout_columnSpan="5"/>

		<TextView
			style="@style/TextLabel"
			android:text="@string/torVolumeFormula"
			compat:layout_columnSpan="5"/>

		<TextView
			style="@style/TextLabel"
			android:labelFor="@+id/decVolume"
			android:text="@string/torVol"/>

		<EditText
			android:id="@+id/decVolume"
			style="@style/UnsignedDecimal"
			android:ems="7"
			android:imeOptions="actionDone"
			compat:layout_columnSpan="4"/>

		<Button
			android:id="@+id/btnClear"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="15dp"
			android:text="@string/clear"
			compat:layout_columnSpan="5"/>

		<ImageView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginEnd="8dp"
			android:layout_marginStart="8dp"
			android:adjustViewBounds="true"
			android:contentDescription="@string/torDiagram"
			compat:layout_columnSpan="5"
			compat:layout_gravity="center_horizontal"
			compat:srcCompat="@drawable/diagram_torus"/>
	</android.support.v7.widget.GridLayout>
</ScrollView>
