<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.GridLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:compat="http://schemas.android.com/apk/res-auto"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	compat:columnCount="3">

	<TextView
		style="@style/TextLabel"
		android:text="@string/ohmsFormula"
		compat:layout_columnSpan="3"/>

	<TextView
		style="@style/TextLabel"
		android:labelFor="@+id/decVolt"
		android:text="@string/ohmsV"/>

	<EditText
		android:id="@+id/decVolt"
		style="@style/SignedDecimal"
		android:ems="7"
		android:hint="@string/voltage">

		<requestFocus/>
	</EditText>

	<TextView
		style="@style/TextLabel"
		android:text="@string/volts"/>

	<TextView
		style="@style/TextLabelCenter"
		android:text="@string/eq"
		compat:layout_columnSpan="2"/>

	<Space/>

	<TextView
		style="@style/TextLabel"
		android:labelFor="@+id/decCur"
		android:text="@string/ohmsI"/>

	<EditText
		android:id="@+id/decCur"
		style="@style/SignedDecimal"
		android:ems="7"
		android:hint="@string/current"/>

	<TextView
		style="@style/TextLabel"
		android:text="@string/amps"/>

	<TextView
		style="@style/TextLabel"
		android:labelFor="@+id/decRes"
		android:text="@string/ohmsR"/>

	<EditText
		android:id="@+id/decRes"
		style="@style/SignedDecimal"
		android:ems="7"
		android:hint="@string/resistance"
		android:imeOptions="actionDone"/>

	<TextView
		style="@style/TextLabel"
		android:text="@string/ohms"/>

	<Button
		android:id="@+id/btnClear"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="15dp"
		android:text="@string/clear"
		compat:layout_columnSpan="3"/>
</android.support.v7.widget.GridLayout>
