<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.GridLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:compat="http://schemas.android.com/apk/res-auto"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	compat:columnCount="2">

	<TextView
		style="@style/TextLabel"
		android:labelFor="@+id/intDecimalNum"
		android:text="@string/decValue"/>

	<EditText
		android:id="@+id/intDecimalNum"
		style="@style/UnsignedDecimal"
		android:ems="7"
		android:hint="@string/decHint">

		<requestFocus/>
	</EditText>

	<TextView
		style="@style/TextLabel"
		android:labelFor="@+id/strRomanNum"
		android:text="@string/romanNumeral"/>

	<EditText
		android:id="@+id/strRomanNum"
		android:digits="IVXLCDM"
		android:ems="7"
		android:hint="@string/romHint"
		android:imeOptions="actionDone"
		android:inputType="textCapCharacters|textNoSuggestions"
		android:textAlignment="textEnd"/>

	<Button
		android:id="@+id/btnClear"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="20dp"
		android:text="@string/clear"
		compat:layout_columnSpan="2"/>
</android.support.v7.widget.GridLayout>
