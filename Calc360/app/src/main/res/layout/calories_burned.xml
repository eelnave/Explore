<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<TextView
		android:id="@+id/lblWeight"
		style="@style/TextLabel"
		android:layout_alignBaseline="@+id/decWeight"
		android:layout_alignParentStart="true"
		android:labelFor="@+id/decWeight"
		android:text="@string/bodyWeight"/>

	<EditText
		android:id="@+id/decWeight"
		style="@style/UnsignedDecimal"
		android:layout_alignParentTop="true"
		android:layout_toEndOf="@+id/lblWeight"
		android:ems="5">

		<requestFocus/>
	</EditText>

	<Spinner
		android:id="@+id/spinMassUnits"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignBaseline="@+id/decWeight"
		android:layout_toEndOf="@+id/decWeight"/>

	<TextView
		style="@style/TextLabel"
		android:layout_alignBaseline="@+id/intTime"
		android:layout_alignParentStart="true"
		android:labelFor="@+id/intTime"
		android:text="@string/Time"/>

	<EditText
		android:id="@+id/intTime"
		style="@style/UnsignedDecimal"
		android:layout_alignEnd="@+id/decWeight"
		android:layout_alignStart="@+id/decWeight"
		android:layout_below="@+id/decWeight"
		android:ems="5"
		android:imeOptions="actionDone"/>

	<TextView
		style="@style/TextLabel"
		android:layout_alignBaseline="@+id/intTime"
		android:layout_toEndOf="@+id/intTime"
		android:text="@string/minutes"/>

	<RadioGroup
		android:id="@+id/grpExercise"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@+id/intTime"
		android:layout_centerHorizontal="true"
		android:layout_marginTop="10dp"
		android:checkedButton="@+id/radWeight">

		<RadioButton
			android:id="@+id/radWeight"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/weightLift"/>

		<RadioButton
			android:id="@+id/radWalk"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/walking"/>

		<RadioButton
			android:id="@+id/radRun"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/running"/>

		<RadioButton
			android:id="@+id/radSwim"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/swimming"/>
	</RadioGroup>

	<TextView
		android:id="@+id/txtResult"
		style="@style/TextLabel"
		android:layout_below="@+id/grpExercise"
		android:layout_centerHorizontal="true"
		android:layout_marginTop="10dp"/>

	<Button
		android:id="@+id/btnClear"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@+id/txtResult"
		android:layout_marginTop="10dp"
		android:text="@string/clear"/>

	<Spinner
		android:id="@+id/spinExercises"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentStart="true"
		android:layout_alignTop="@+id/txtResult"/>

</RelativeLayout>
