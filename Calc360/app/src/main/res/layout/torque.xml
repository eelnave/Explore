<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.GridLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:compat="http://schemas.android.com/apk/res-auto"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	compat:columnCount="3">

	<TextView
		style="@style/TextLabel"
		android:text="@string/torqueFormula"
		compat:layout_columnSpan="3"/>

	<TextView
		style="@style/TextLabel"
		android:labelFor="@+id/decTorque"
		android:text="@string/tqTorque"/>

	<EditText
		android:id="@+id/decTorque"
		style="@style/SignedDecimal"
		android:ems="7"
		android:hint="@string/torque">

		<requestFocus/>
	</EditText>

	<TextView
		style="@style/TextLabel"
		android:text="@string/newtonMeters"/>

	<TextView
		style="@style/TextLabelCenter"
		android:text="@string/eq"
		compat:layout_columnSpan="2"/>

	<Space/>

	<TextView
		style="@style/TextLabel"
		android:labelFor="@+id/decForce"
		android:text="@string/tqForce"/>

	<EditText
		android:id="@+id/decForce"
		style="@style/SignedDecimal"
		android:ems="6"
		android:hint="@string/force"/>

	<TextView
		style="@style/TextLabel"
		android:text="@string/newtons"/>

	<TextView
		style="@style/TextLabel"
		android:labelFor="@+id/decRadius"
		android:text="@string/tqRadius"/>

	<EditText
		android:id="@+id/decRadius"
		style="@style/SignedDecimal"
		android:ems="6"
		android:hint="@string/radius"/>

	<TextView
		style="@style/TextLabel"
		android:text="@string/meters"/>

	<TextView
		style="@style/TextLabel"
		android:labelFor="@+id/decTheta"
		android:text="@string/tqTheta"/>

	<EditText
		android:id="@+id/decTheta"
		style="@style/SignedDecimal"
		android:ems="6"
		android:hint="@string/tqThetaHint"
		android:imeOptions="actionDone"/>

	<TextView
		style="@style/TextLabel"
		android:text="@string/radians"/>

	<Button
		android:id="@+id/btnClear"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="15dp"
		android:text="@string/clear"
		compat:layout_columnSpan="3"/>
</android.support.v7.widget.GridLayout>
