<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:compat="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    compat:columnCount="3">

    <TextView
        style="@style/TextLabel"
        android:labelFor="@+id/weightUnit"
        android:text="@string/liftedWeight" />

    <EditText
        android:id="@+id/decWeight"
        style="@style/UnsignedDecimal"
        android:ems="5">

        <requestFocus />
    </EditText>

    <Space />

    <TextView
        style="@style/TextLabel"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="15dp"
        android:labelFor="@+id/repLabel"
        android:text="@string/reps" />

    <Spinner
        android:id="@+id/intReps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="15dp"
        android:textAlignment="textEnd"
        compat:layout_gravity="fill_horizontal" />

    <Space />

    <TextView
        style="@style/TextLabel"
        android:labelFor="@+id/maxWeight"
        android:text="@string/maxWeight" />

    <TextView
        android:id="@+id/oneRep"
        style="@style/UnsignedDecimal"
        android:ems="5"
        android:imeOptions="actionDone" />

    <Space />

    <Button
        android:id="@+id/btnClear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/clear" />
</android.support.v7.widget.GridLayout>
