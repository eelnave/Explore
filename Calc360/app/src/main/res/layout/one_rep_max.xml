<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.GridLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:compat="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	compat:columnCount="2">

	<TextView
		style="@style/TextLabel"
		android:labelFor="@+id/decWeight"
		android:text="@string/Weight"/>

	<EditText
		android:id="@+id/decWeight"
		style="@style/UnsignedDecimal"
		android:ems="5">

		<requestFocus/>
	</EditText>

	<TextView
		style="@style/TextLabel"
		android:layout_marginTop="10dp"
		android:labelFor="@+id/intReps"
		android:text="@string/reps"/>

	<Spinner
		android:id="@+id/intReps"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="10dp"/>

	<TextView
		style="@style/TextLabel"
		android:layout_marginTop="10dp"
		android:labelFor="@+id/maxWeight"
		android:text="@string/oneRepMax"/>

	<TextView
		android:id="@+id/oneRep"
		style="@style/UnsignedDecimal"
		android:layout_marginTop="10dp"
		android:ems="5"/>

	<Button
		android:id="@+id/btnClear"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="15dp"
		android:text="@string/clear"/>
</android.support.v7.widget.GridLayout>
