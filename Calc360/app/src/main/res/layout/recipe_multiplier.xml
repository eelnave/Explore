<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.GridLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:compat="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	compat:columnCount="3">

	<Space/>

	<TextView
		style="@style/TextLabel"
		android:labelFor="@+id/spinProp"
		android:text="@string/unitType"/>

	<Spinner
		android:id="@+id/spinProp"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"/>

	<TextView
		style="@style/TextLabel"
		android:layout_marginTop="10dp"
		android:labelFor="@+id/decOrigAmt"
		android:text="@string/amount"/>

	<EditText
		android:id="@+id/decOrigAmt"
		style="@style/UnsignedDecimal"
		android:layout_marginTop="10dp"
		android:ems="5"
		android:hint="@string/amountHint">

		<requestFocus/>
	</EditText>

	<Spinner
		android:id="@+id/spinStart"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="10dp"/>

	<TextView
		style="@style/TextLabel"
		android:layout_marginTop="15dp"
		android:labelFor="@+id/spinMult"
		android:text="@string/multiplier"/>

	<Spinner
		android:id="@+id/spinMult"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="15dp"
		android:entries="@array/recipeRatio"/>

	<Space/>

	<TextView
		style="@style/TextLabel"
		android:layout_marginTop="15dp"
		android:text="@string/result"/>

	<TextView
		android:id="@+id/decResult"
		style="@style/TextResult"
		android:layout_marginTop="15dp"/>

	<Spinner
		android:id="@+id/spinEnd"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="15dp"/>

	<Button
		android:id="@+id/btnClear"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="15dp"
		android:text="@string/clear"
		compat:layout_columnSpan="3"/>
</android.support.v7.widget.GridLayout>
