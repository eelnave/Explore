<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.GridLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:compat="http://schemas.android.com/apk/res-auto"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	compat:columnCount="4">

	<TextView
		style="@style/TextLabel"
		android:layout_weight="1"
		android:text="@string/streamServicePayment"
		compat:layout_columnSpan="3"/>

	<EditText
		android:id="@+id/ssp"
		style="@style/UnsignedDecimal"
		android:ems="5"
		android:hint="@string/priceHint">

		<requestFocus/>
	</EditText>

	<TextView
		style="@style/TextLabel"
		android:text="@string/twoDotFiveHRS"
		android:layout_weight="1"
		compat:layout_columnSpan="3"/>

	<EditText
		android:id="@+id/hours1"
		style="@style/UnsignedInteger"
		android:ems="5">

		<requestFocus/>
	</EditText>

	<TextView
		style="@style/TextLabel"
		android:text="@string/twoHours"
		android:layout_weight="1"
		compat:layout_columnSpan="3"/>

	<EditText
		android:id="@+id/hours2"
		style="@style/UnsignedInteger"
		android:ems="5">

		<requestFocus/>
	</EditText>

	<TextView
		style="@style/TextLabel"
		android:text="@string/oneDotFiveHRS"
		android:layout_weight="1"
		compat:layout_columnSpan="3"/>

	<EditText
		android:id="@+id/hours3"
		style="@style/UnsignedInteger"
		android:ems="5">

		<requestFocus/>
	</EditText>

	<TextView
		style="@style/TextLabel"
		android:text="@string/fortyFiveMINS"
		android:layout_weight="1"
		compat:layout_columnSpan="3"/>

	<EditText
		android:id="@+id/minutes1"
		style="@style/UnsignedInteger"
		android:ems="5">

		<requestFocus/>
	</EditText>

	<TextView
		style="@style/TextLabel"
		android:text="@string/twentyTwoMINS"
		android:layout_weight="1"
		compat:layout_columnSpan="3"/>

	<EditText
		android:id="@+id/minutes2"
		style="@style/UnsignedInteger"
		android:ems="5">

		<requestFocus/>
	</EditText>

	<TextView
		style="@style/TextLabel"
		android:layout_marginTop="15dp"
		android:text="@string/totalTime"
		compat:layout_columnSpan="3"/>

	<TextView
		android:id="@+id/ttw"
		style="@style/TextResult"
		android:layout_marginTop="15dp"/>

	<TextView
		style="@style/TextLabel"
		android:layout_marginTop="15dp"
		android:text="@string/spentPerTime"
		compat:layout_columnSpan="3"/>

	<TextView
		android:id="@+id/spentPer"
		style="@style/TextResult"
		android:layout_marginTop="15dp"/>

	<Button
		android:id="@+id/btnClear"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="15dp"
		android:text="@string/clear"
		compat:layout_columnSpan="4"/>

</android.support.v7.widget.GridLayout>