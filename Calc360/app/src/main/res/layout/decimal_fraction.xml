<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.GridLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:compat="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	compat:columnCount="3">

	<TextView
		style="@style/TextLabel"
		android:text="@string/decimalFractionInstructions"
		compat:layout_columnSpan="3"/>

	<TextView
		style="@style/TextLabel"
		android:labelFor="@+id/decimal"
		android:text="@string/decimal"/>

	<EditText
		android:id="@+id/decimal"
		style="@style/UnsignedDecimal"
		android:ems="7"
		compat:layout_columnSpan="2">

		<requestFocus/>
	</EditText>

	<TextView
		style="@style/TextLabel"
		android:labelFor="@+id/wholeNumF"
		android:text="@string/fraction"
		compat:layout_gravity="center_vertical"
		compat:layout_rowSpan="3"/>

	<EditText
		android:id="@+id/wholeNumF"
		style="@style/UnsignedInteger"
		android:ems="4"
		compat:layout_gravity="center_vertical"
		compat:layout_rowSpan="3"/>

	<EditText
		android:id="@+id/numerator"
		style="@style/UnsignedInteger"
		android:ems="4"/>

	<View
		android:layout_width="80dp"
		android:layout_height="1dp"
		android:background="@android:color/black"/>

	<EditText
		android:id="@+id/denominator"
		style="@style/UnsignedInteger"
		android:ems="4"/>

	<Button
		android:id="@+id/btnClear"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="15dp"
		android:text="@string/clear"/>
</android.support.v7.widget.GridLayout>
