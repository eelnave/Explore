<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.GridLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent">


	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="60dp"
			android:orientation="horizontal">

			<TextView
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:textSize="15sp"
				android:text="@string/decimalFractionInstructions"/>
		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal">

			<TextView
				android:layout_width="150dp"
				android:layout_height="wrap_content"
				android:text="@string/decimal"/>

			<EditText
				android:id="@+id/decimal"
				style="@style/SignedDecimal"
				android:layout_width="100dp"
				android:layout_height="wrap_content"
				android:ems="4"
				android:hint="@string/zeroDecimalTwentyFive"
				android:inputType="numberDecimal"/>

		</LinearLayout>

		<Space
			android:layout_width="match_parent"
			android:layout_height="40dp"/>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal">

			<TextView
				android:layout_width="150dp"
				android:layout_height="wrap_content"
				android:text="@string/fraction"/>



			<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="horizontal">

					<LinearLayout
						android:layout_width="wrap_content"
						android:layout_height="match_parent"
						android:orientation="vertical">

						<LinearLayout
							android:layout_width="wrap_content"
							android:layout_height="match_parent"
							android:orientation="horizontal">

							<EditText
								android:id="@+id/wholeNumF"
								style="@style/SignedDecimal"
								android:layout_width="60dp"
								android:layout_height="65dp"
								android:ems="10"
								android:hint="@string/zero"
								android:inputType="numberDecimal"/>

							<Space
								android:layout_width="15dp"
								android:layout_height="match_parent"
								android:layout_weight="1"/>

						</LinearLayout>

					</LinearLayout>

				<LinearLayout
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:orientation="vertical">

					<EditText
						android:id="@+id/numerator"
						style="@style/SignedDecimal"
						android:layout_width="60dp"
						android:layout_height="wrap_content"
						android:ems="10"
						android:hint="@string/one"
						android:inputType="numberDecimal"/>


					<View
						android:layout_width="65dp"
						android:layout_height="1dp"
						android:background="@android:color/black"/>

					<EditText
						android:id="@+id/denominator"
						style="@style/SignedDecimal"
						android:layout_width="60dp"
						android:layout_height="wrap_content"
						android:ems="10"
						android:hint="@string/four"
						android:inputType="numberDecimal"/>

				</LinearLayout>

				</LinearLayout>

		</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">

		<Button
			android:id="@+id/clearB"
			android:layout_width="91dp"
			android:layout_height="50dp"
			android:layout_marginBottom="100dp"
			android:layout_marginEnd="20dp"
			android:text="@string/clearCaps"/>

	</LinearLayout>

	</LinearLayout>


</android.support.v7.widget.GridLayout>

