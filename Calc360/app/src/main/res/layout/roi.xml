<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.GridLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:compat="http://schemas.android.com/apk/res-auto"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	compat:columnCount="4">


	//Investment box.
	<TextView
		style="@style/TextLabel"
		android:text="@string/invest"
		compat:layout_columnSpan="3"/>

	<EditText
		android:id="@+id/startInvestment"
		style="@style/UnsignedDecimal"
		android:ems="5"
		android:hint="@string/priceHint">

		<requestFocus/>
	</EditText>

	// total investment box.
	<TextView
		style="@style/TextLabel"
		android:text="@string/totalInvest"
		compat:layout_columnSpan="3"/>

	<EditText
		android:id="@+id/allTheMoney"
		style="@style/UnsignedDecimal"
		android:ems="5"
		android:hint="@string/priceHint">

		<requestFocus/>
	</EditText>



	//dont know what this is right now.
	<TextView
		android:id="@+id/curTaxAmt"
		style="@style/TextResult"/>


	// ROI
	<TextView
		style="@style/TextLabel"
		android:layout_marginTop="15dp"
		android:text="@string/roi"
		compat:layout_columnSpan="3"/>
//dont know what this one is either.
	<TextView
		android:id="@+id/curTotal"
		style="@style/TextResult"
		android:layout_marginTop="15dp"/>

	<Button
		android:id="@+id/btnClear"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="15dp"
		android:text="@string/clear"
		compat:layout_columnSpan="4"/>
</android.support.v7.widget.GridLayout>
