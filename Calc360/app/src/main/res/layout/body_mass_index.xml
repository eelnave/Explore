<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">

	<RadioGroup
		android:id="@+id/bmiRadioGroup"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="10dp"
		android:orientation="horizontal">

		<Space
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_weight="1"/>

		<RadioButton
			android:id="@+id/radImperial"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/Imperial"/>

		<Space
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_weight="1"/>

		<RadioButton
			android:id="@+id/radMetric"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/Metric"/>

		<Space
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_weight="1"/>
	</RadioGroup>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">

		<TextView
			style="@style/TextLabel"
			android:labelFor="@+id/decHeight"
			android:text="@string/Height"/>

		<EditText
			android:id="@+id/decHeight"
			style="@style/UnsignedDecimal"
			android:ems="4">

			<requestFocus/>
		</EditText>

		<TextView
			android:id="@+id/heightUnit"
			style="@style/TextLabel"/>
	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">

		<TextView
			style="@style/TextLabel"
			android:labelFor="@+id/decWeight"
			android:text="@string/Weight"/>

		<EditText
			android:id="@+id/decWeight"
			style="@style/UnsignedDecimal"
			android:ems="4"
			android:imeOptions="actionDone"/>

		<TextView
			android:id="@+id/weightUnit"
			style="@style/TextLabel"/>
	</LinearLayout>

	<TextView
		android:id="@+id/result"
		style="@style/TextLabel"
		android:layout_marginTop="10dp"/>

	<TextView
		android:id="@+id/advice"
		style="@style/TextLabel"
		android:layout_marginTop="10dp"/>

	<Button
		android:id="@+id/btnClear"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="10dp"
		android:text="@string/clear"/>
</LinearLayout>
