<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">

	<TextView
		android:id="@+id/lblTitle"
		style="@style/TextLabel"
		android:text="@string/XofY"/>

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginStart="20dp">

		<TextView
			android:id="@+id/lblA"
			style="@style/TextLabel"
			android:layout_alignBaseline="@+id/decA"
			android:layout_alignParentStart="true"
			android:labelFor="@+id/decA"
			android:text="@string/A"/>

		<EditText
			android:id="@+id/decA"
			style="@style/SignedDecimal"
			android:layout_alignParentTop="true"
			android:layout_toEndOf="@+id/lblA"
			android:ems="5">

			<requestFocus/>
		</EditText>

		<TextView
			android:id="@+id/lblEqual"
			style="@style/TextLabel"
			android:layout_below="@+id/decA"
			android:layout_marginEnd="10dp"
			android:layout_marginStart="10dp"
			android:layout_toEndOf="@+id/decA"
			android:text="@string/eq"/>

		<TextView
			android:id="@+id/lblB"
			style="@style/TextLabel"
			android:layout_alignBaseline="@+id/decB"
			android:layout_alignParentStart="true"
			android:labelFor="@+id/decB"
			android:text="@string/B"/>

		<EditText
			android:id="@+id/decB"
			style="@style/SignedDecimal"
			android:layout_below="@+id/lblEqual"
			android:layout_toEndOf="@+id/lblB"
			android:ems="5"/>

		<TextView
			android:id="@+id/lblX"
			style="@style/TextLabel"
			android:layout_alignBaseline="@+id/decA"
			android:layout_toEndOf="@+id/lblEqual"
			android:labelFor="@+id/decX"
			android:text="@string/X"/>

		<EditText
			android:id="@+id/decX"
			style="@style/SignedDecimal"
			android:layout_alignBaseline="@+id/decA"
			android:layout_toEndOf="@+id/lblX"
			android:ems="5"/>

		<TextView
			android:id="@+id/lblY"
			style="@style/TextLabel"
			android:layout_alignBaseline="@+id/decB"
			android:layout_toEndOf="@+id/lblEqual"
			android:labelFor="@+id/decY"
			android:text="@string/Y"/>

		<EditText
			android:id="@+id/decY"
			style="@style/SignedDecimal"
			android:layout_alignBaseline="@+id/decB"
			android:layout_toEndOf="@+id/lblY"
			android:ems="5"
			android:imeOptions="actionDone"/>
	</RelativeLayout>

	<Button
		android:id="@+id/btnClear"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="15dp"
		android:text="@string/clear"/>
</LinearLayout>
