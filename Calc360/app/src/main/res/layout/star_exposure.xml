<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.GridLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:compat="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content">


	<TextView
		android:id="@+id/focal-length-id"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/focal_length"
		compat:layout_column="0"/>

	<TextView
		android:id="@+id/crop-factor-id"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/crop_factor"
		compat:layout_column="0"
		compat:layout_row="1"/>


	<EditText
		android:id="@+id/crop-factor-entry"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:ems="10"
		android:hint="@string/ex_1_5"
		android:inputType="textPersonName"
		compat:layout_column="1"
		compat:layout_row="1"/>

	<EditText
		android:id="@+id/focal-entry-id"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:ems="10"
		android:hint="@string/ex_18"
		android:inputType="textPersonName"
		compat:layout_column="1"
		compat:layout_row="0"/>

	<TextView
		android:id="@+id/editText3"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:ems="10"
		compat:layout_column="1"
		compat:layout_row="2"
		android:layout_marginStart="10dp"/>

	<TextView
		android:id="@+id/unit-type-id1"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="10dp"
		android:ems="10"
		android:text="@string/mm"
		compat:layout_column="2"
		compat:layout_row="0"/>



</android.support.v7.widget.GridLayout>