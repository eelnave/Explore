<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.GridLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent">


	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical">



		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="50dp"
			android:orientation="horizontal">

			<TextView
				android:id="@+id/cO"
				android:layout_width="150dp"
				android:layout_height="40dp"
				android:text="@string/coordinate1"/>

			<TextView
				android:id="@+id/parenLO"
				android:layout_width="20dp"
				android:layout_height="40dp"
				android:text="@string/lparen"/>

			<EditText
				android:id="@+id/oneX"
				style="@style/SignedDecimal"
				android:layout_width="75dp"
				android:layout_height="40dp"
				android:ems="4"
				android:hint="@string/X"
				android:inputType="numberDecimal"/>

			<TextView
				android:id="@+id/comO"
				android:layout_width="20dp"
				android:layout_height="40dp"
				android:text="@string/comma"/>

			<EditText
				android:id="@+id/oneY"
				style="@style/SignedDecimal"
				android:layout_width="75dp"
				android:layout_height="40dp"
				android:ems="5"
				android:hint="@string/Y"
				android:inputType="numberDecimal"/>

			<TextView
				android:id="@+id/parenRO"
				android:layout_width="20dp"
				android:layout_height="40dp"
				android:text="@string/rparen"/>

		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="50dp"
			android:orientation="horizontal">

			<TextView
				android:id="@+id/cT"
				android:layout_width="150dp"
				android:layout_height="40dp"
				android:text="@string/coordinate2"/>

			<TextView
				android:id="@+id/parenLT"
				android:layout_width="20dp"
				android:layout_height="40dp"
				android:text="@string/lparen"/>

			<EditText
				android:id="@+id/twoX"
				android:layout_width="75dp"
				android:layout_height="40dp"
				style="@style/SignedDecimal"
				android:ems="10"
				android:hint="@string/X"
				android:inputType="numberDecimal"/>

			<TextView
				android:id="@+id/comT"
				android:layout_width="20dp"
				android:layout_height="40dp"
				android:text="@string/comma"/>

			<EditText
				android:id="@+id/twoY"
				android:layout_width="75dp"
				android:layout_height="40dp"
				style="@style/SignedDecimal"
				android:ems="10"
				android:hint="@string/Y"
				android:inputType="numberDecimal"/>

			<TextView
				android:id="@+id/parenRT"
				android:layout_width="20dp"
				android:layout_height="40dp"
				android:text="@string/rparen"/>
		</LinearLayout>

		<Space
			android:layout_width="match_parent"
			android:layout_height="50dp"/>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="50dp"
			android:orientation="horizontal">



			<EditText
				android:id="@+id/total"
				android:layout_width="100dp"
				android:layout_height="40dp"
				style="@style/SignedDecimal"
				android:ems="10"
				android:hint="@string/answer"
				android:inputType="numberDecimal"/>
			<Space
				android:layout_width="20dp"
				android:layout_height="match_parent"/>
			<TextView
				android:id="@+id/unit"
				android:layout_width="75dp"
				android:layout_height="40dp"
				android:ems="10"
				android:text="@string/units"/>

		</LinearLayout>

		<Button
			android:id="@+id/clearB"
			android:layout_width="91dp"
			android:layout_height="50dp"
			android:layout_marginBottom="100dp"
			android:layout_marginEnd="20dp"
			android:text="@string/clearCaps"/>

	</LinearLayout>


</android.support.v7.widget.GridLayout>

