<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">

	<TextView
		style="@style/TextLabel"
		android:labelFor="@+id/ipValue1"
		android:text="@string/subnetHint"/>

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="horizontal">

		<EditText
			android:id="@+id/ipValue1"
			style="@style/UnsignedInteger"
			android:layout_weight="1"
			android:ems="3"
			android:imeOptions="actionDone">

			<requestFocus/>
		</EditText>

		<TextView
			style="@style/TextLabel"
			android:layout_width="0dp"
			android:layout_weight="1"
			android:ems="1"
			android:text="@string/dot"/>

		<EditText
			android:id="@+id/ipValue2"
			style="@style/UnsignedInteger"
			android:layout_weight="1"
			android:ems="3"
			android:imeOptions="actionDone">

			<requestFocus/>
		</EditText>

		<TextView
			style="@style/TextLabel"
			android:layout_width="0dp"
			android:layout_weight="1"
			android:ems="1"
			android:text="@string/dot"/>

		<EditText
			android:id="@+id/ipValue3"
			style="@style/UnsignedInteger"
			android:layout_weight="1"
			android:ems="3"
			android:imeOptions="actionDone">

			<requestFocus/>
		</EditText>

		<TextView
			style="@style/TextLabel"
			android:layout_width="0dp"
			android:layout_weight="1"
			android:ems="1"
			android:text="@string/dot"/>

		<EditText
			android:id="@+id/ipValue4"
			style="@style/UnsignedInteger"
			android:layout_weight="1"
			android:ems="3"
			android:imeOptions="actionDone">

			<requestFocus/>
		</EditText>
	</LinearLayout>

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="horizontal">

		<TextView
			android:id="@+id/textView15"
			style="@style/TextLabel"
			android:text="@string/defaultMask"/>

	</LinearLayout>

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="horizontal">

		<EditText
			android:id="@+id/ipValue5"
			style="@style/UnsignedInteger"
			android:layout_weight="1"
			android:ems="3"
			android:imeOptions="actionDone">

			<requestFocus/>
		</EditText>

		<TextView
			style="@style/TextLabel"
			android:layout_width="0dp"
			android:layout_weight="1"
			android:ems="1"
			android:text="@string/dot"/>

		<EditText
			android:id="@+id/ipValue6"
			style="@style/UnsignedInteger"
			android:layout_weight="1"
			android:ems="3"
			android:imeOptions="actionDone">

			<requestFocus/>
		</EditText>

		<TextView
			style="@style/TextLabel"
			android:layout_width="0dp"
			android:layout_weight="1"
			android:ems="1"
			android:text="@string/dot"/>

		<EditText
			android:id="@+id/ipValue7"
			style="@style/UnsignedInteger"
			android:layout_weight="1"
			android:ems="3"
			android:imeOptions="actionDone">

			<requestFocus/>
		</EditText>

		<TextView
			style="@style/TextLabel"
			android:layout_width="0dp"
			android:layout_weight="1"
			android:ems="1"
			android:text="@string/dot"/>

		<EditText
			android:id="@+id/ipValue8"
			style="@style/UnsignedInteger"
			android:layout_weight="1"
			android:ems="3"
			android:imeOptions="actionDone">

			<requestFocus/>
		</EditText>

	</LinearLayout>

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="horizontal">

		<TextView
			style="@style/TextLabel"
			android:text="@string/availableHosts"/>

		<TextView
			android:id="@+id/availableHosts"
			style="@style/TextLabel"
			android:layout_marginStart="10dp"/>

	</LinearLayout>

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="horizontal">

		<TextView
			style="@style/TextLabel"
			android:text="@string/numberOfSubnets"/>

		<TextView
			android:id="@+id/numberOfSubnets"
			style="@style/TextLabel"
			android:layout_marginStart="10dp"/>

	</LinearLayout>
</LinearLayout>
