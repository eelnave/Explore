<?xml version="1.0" encoding="utf-8"?>
<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:compat="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<android.support.v7.widget.GridLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		compat:columnCount="3">

		<TextView
			style="@style/TextLabel"
			android:text="@string/quadExplain1"
			compat:layout_columnSpan="3"/>

		<TextView
			style="@style/TextLabelCenter"
			android:text="@string/quadExplain2"
			compat:layout_columnSpan="3"/>

		<TextView
			style="@style/TextLabel"
			android:text="@string/quadExplain3"
			compat:layout_columnSpan="3"/>

		<ImageView
			android:layout_width="220dp"
			android:layout_height="wrap_content"
			android:adjustViewBounds="true"
			android:contentDescription="@string/quadExplain4"
			android:src="@drawable/formula_quadratic"
			compat:layout_columnSpan="3"
			compat:layout_gravity="center_horizontal"/>

		<TextView
			style="@style/TextLabelEnd"
			android:layout_marginEnd="10dp"
			android:labelFor="@id/decA"
			android:text="@string/quadA"/>

		<EditText
			android:id="@+id/decA"
			style="@style/SignedDecimal"
			android:ems="5">

			<requestFocus/>
		</EditText>

		<Space/>

		<TextView
			style="@style/TextLabelEnd"
			android:layout_marginEnd="10dp"
			android:labelFor="@id/decB"
			android:text="@string/quadB"/>

		<EditText
			android:id="@+id/decB"
			style="@style/SignedDecimal"
			android:ems="5"/>

		<Space/>

		<TextView
			style="@style/TextLabelEnd"
			android:layout_marginEnd="10dp"
			android:labelFor="@id/decC"
			android:text="@string/quadC"/>

		<EditText
			android:id="@+id/decC"
			style="@style/SignedDecimal"
			android:ems="5"
			android:imeOptions="actionDone"/>

		<Space/>

		<TextView
			style="@style/TextLabel"
			android:layout_marginEnd="10dp"
			android:layout_marginTop="10dp"
			android:text="@string/roots"/>

		<TextView
			android:id="@+id/decRoot1"
			style="@style/TextLabel"
			android:layout_marginTop="10dp"
			compat:layout_columnSpan="2"/>

		<Space/>

		<TextView
			android:id="@+id/decRoot2"
			style="@style/TextLabel"
			compat:layout_columnSpan="2"/>

		<Button
			android:id="@+id/btnClear"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="10dp"
			android:text="@string/clear"
			compat:layout_columnSpan="3"/>
	</android.support.v7.widget.GridLayout>
</ScrollView>
