<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:compat="http://schemas.android.com/apk/res-auto"
	android:id="@+id/Counter"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:gravity="center_vertical"
	android:orientation="vertical">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">

		<TextView
			android:id="@+id/intCount"
			style="@style/TextResultOld"
			android:layout_marginEnd="10sp"
			android:layout_weight="9"
			android:textSize="60sp"/>

		<Button
			android:id="@+id/btnClear"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:text="@string/clear"
			android:textSize="30sp"/>
	</LinearLayout>

	<android.support.v7.widget.GridLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		compat:columnCount="2">

		<Button
			android:id="@+id/btnPlusOne"
			style="@style/CounterButton"
			android:text="@string/plusOne"/>

		<Button
			android:id="@+id/btnPlusTwo"
			style="@style/CounterButton"
			android:text="@string/plusTwo"/>

		<Button
			android:id="@+id/btnPlusThree"
			style="@style/CounterButton"
			android:text="@string/plusThree"/>

		<Button
			android:id="@+id/btnPlusFive"
			style="@style/CounterButton"
			android:text="@string/plusFive"/>
	</android.support.v7.widget.GridLayout>
</LinearLayout>
