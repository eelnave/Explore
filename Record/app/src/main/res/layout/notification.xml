<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/notification_title"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<TextView
		android:id="@+id/notification_header"
		android:layout_width="331dp"
		android:layout_height="42dp"
		android:layout_marginEnd="8dp"
		android:layout_marginStart="28dp"
		android:layout_marginTop="16dp"
		android:text="@string/notification_text1"
		android:textSize="25sp"
		android:textColor="#333333"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.0"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<TextView
		android:id="@+id/notification_goalName"
		android:layout_width="313dp"
		android:layout_height="67dp"
		android:layout_marginEnd="8dp"
		android:layout_marginStart="8dp"
		android:layout_marginTop="8dp"
		android:textColor="#000000"
		android:textSize="35sp"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.509"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/notification_header" />

	<TextView
		android:id="@+id/notification_text2"
		android:layout_width="313dp"
		android:layout_height="73dp"
		android:layout_marginEnd="8dp"
		android:layout_marginStart="8dp"
		android:layout_marginTop="28dp"
		android:text="@string/notification_text2"
		android:textColor="#111111"
		android:textSize="25sp"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.145"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/divider" />

	<View
		android:id="@+id/divider"
		android:layout_width="368dp"
		android:layout_height="1dp"
		android:layout_marginEnd="8dp"
		android:layout_marginStart="8dp"
		android:layout_marginTop="24dp"
		android:background="?android:attr/listDivider"
		android:foreground="@android:color/black"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/notification_goalName" />

	<Button
		android:id="@+id/notification_yes"
		android:layout_width="100dp"
		android:layout_height="100dp"
		android:layout_marginStart="48dp"
		android:layout_marginTop="64dp"
		android:background="@android:color/holo_green_dark"
		android:text="@string/yes"
		android:gravity="center_horizontal|bottom"
		android:textSize="20sp"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/notification_text2"
		/>

	<Button
		android:id="@+id/notification_no"
		android:layout_width="100dp"
		android:layout_height="100dp"
		android:layout_marginEnd="48dp"
		android:layout_marginTop="64dp"
		android:background="@android:color/holo_red_dark"
		android:text="@string/no"
		android:gravity="center_horizontal|bottom"
		android:textSize="20sp"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/notification_text2" />

	<ImageView
		android:id="@+id/imageView"
		android:layout_width="93dp"
		android:layout_height="59dp"
		android:layout_marginEnd="8dp"
		android:layout_marginStart="8dp"
		android:layout_marginTop="8dp"
		android:translationZ="100dp"
		android:visibility="visible"
		app:layout_constraintEnd_toEndOf="@+id/notification_yes"
		app:layout_constraintStart_toStartOf="@+id/notification_yes"
		app:layout_constraintTop_toTopOf="@+id/notification_yes"
		app:srcCompat="?android:attr/textCheckMark" />

	<ImageView
		android:id="@+id/imageView2"
		android:layout_width="88dp"
		android:layout_height="58dp"
		android:layout_marginEnd="8dp"
		android:layout_marginStart="8dp"
		android:layout_marginTop="8dp"
		app:layout_constraintEnd_toEndOf="@+id/notification_no"
		app:layout_constraintStart_toStartOf="@+id/notification_no"
		app:layout_constraintTop_toTopOf="@+id/notification_no"
		app:srcCompat="@android:drawable/ic_notification_clear_all"
		android:translationZ="100dp"/>

</android.support.constraint.ConstraintLayout>
