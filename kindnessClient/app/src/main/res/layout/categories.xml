<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	xmlns:compat="http://schemas.android.com/apk/res-auto"
	tools:context="edu.byui.cit.kindness.MainPage">

	<android.support.v7.widget.GridLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		compat:columnCount="3">
		<edu.byui.cit.kindness.IconButton
			android:id="@+id/emotional"
			style="@style/IconButton"
			android:background="@drawable/emotional"
			android:text="@string/emotion"/>

		<edu.byui.cit.kindness.IconButton
			android:id="@+id/food"
			style="@style/IconButton"
			android:background="@drawable/food"
			android:text="@string/food"/>

		<edu.byui.cit.kindness.IconButton
			android:id="@+id/labor"
			style="@style/IconButton"
			android:background="@drawable/labor"
			android:text="@string/labor"/>

		<edu.byui.cit.kindness.IconButton
			android:id="@+id/travel"
			style="@style/IconButton"
			android:background="@drawable/travel"
			android:text="@string/travel"/>

		<edu.byui.cit.kindness.IconButton
			android:id="@+id/money"
			style="@style/IconButton"
			android:background="@drawable/money"
			android:text="@string/money"/>

		<edu.byui.cit.kindness.IconButton
			android:id="@+id/other"
			style="@style/IconButton"
			android:background="@drawable/other"
			android:text="@string/other"/>

	</android.support.v7.widget.GridLayout>

</LinearLayout>
