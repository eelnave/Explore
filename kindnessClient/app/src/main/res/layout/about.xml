<?xml version="1.0" encoding="utf-8"?>
<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginEnd="5dp"
		android:layout_marginStart="5dp"
		android:orientation="vertical">

		<TextView
			android:id="@+id/txtVersion"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textStyle="bold"/>

		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="10dp"
			android:text="@string/appDescr"/>

		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="10dp"
			android:text="@string/eula"/>

		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="10dp"
			android:text="@string/logoCredit"/>

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="10sp">

			<TextView
				android:id="@+id/lblContribs"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentStart="true"
				android:text="@string/contribs"
				android:textStyle="bold"/>
			<!--
						<TextView
							android:id="@+id/lblFall2017"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_alignParentStart="true"
							android:layout_below="@+id/lblContribs"
							android:layout_alignEnd="@+id/lblFall2017B"
							android:text="@string/fall2017"
							android:textAlignment="center"
							android:textSize="14sp"
							android:textStyle="bold"/>
			-->
			<TextView
				android:id="@+id/lblFall2017A"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentStart="true"
				android:layout_below="@+id/lblContribs"
				android:text="@string/contribsFall2017A"
				android:textSize="14sp"/>

			<TextView
				android:id="@+id/lblFall2017B"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignBaseline="@+id/lblFall2017A"
				android:layout_marginStart="5dp"
				android:layout_toEndOf="@+id/lblFall2017A"
				android:text="@string/contribsFall2017B"
				android:textSize="14sp"/>
		</RelativeLayout>
	</LinearLayout>
</ScrollView>
