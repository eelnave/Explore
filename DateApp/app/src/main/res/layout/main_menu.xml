			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintVertical_bias="0.0" />
	-->

	<TextView
		android:id="@+id/title"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/MainMenu"
		android:textColor="#F8F8F7"
		android:textSize="32sp"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"/>

	<Button
		android:id="@+id/dateBtn"
		android:layout_width="120dp"
		android:layout_height="120dp"
		android:drawableTop="@drawable/view"
		android:gravity="center|bottom"
		android:paddingBottom="18dp"
		android:paddingTop="24dp"
		android:text="@string/dates"
		android:textSize="13sp"
		app:layout_constraintBottom_toTopOf="@+id/filterBtn"
		app:layout_constraintEnd_toStartOf="@+id/randomBtn"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/title"/>

	<Button
		android:id="@+id/randomBtn"
		android:layout_width="120dp"
		android:layout_height="120dp"
		android:drawableTop="@drawable/random"
		android:gravity="center|bottom"
		android:paddingBottom="18dp"
		android:paddingTop="30dp"
		android:text="@string/random"
		android:textSize="13sp"
		app:layout_constraintBottom_toTopOf="@+id/addBtn"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toEndOf="@+id/dateBtn"
		app:layout_constraintTop_toBottomOf="@+id/title"/>

	<Button
		android:id="@+id/filterBtn"
		android:layout_width="120dp"
		android:layout_height="120dp"
		android:drawableTop="@drawable/filter"
		android:gravity="center|bottom"
		android:paddingBottom="18dp"
		android:paddingTop="22dp"
		android:text="@string/filter"
		android:textSize="13sp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toStartOf="@+id/addBtn"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/dateBtn"/>

	<Button
		android:id="@+id/addBtn"
		android:layout_width="120dp"
		android:layout_height="120dp"
		android:drawableTop="@drawable/plus"
		android:gravity="center|bottom"
		android:paddingBottom="18dp"
		android:paddingTop="30dp"
		android:text="@string/add"
		android:textSize="13sp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toEndOf="@id/filterBtn"
		app:layout_constraintTop_toBottomOf="@+id/randomBtn"/>
</android.support.constraint.ConstraintLayout>
